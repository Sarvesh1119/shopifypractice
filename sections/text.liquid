<div>
    <h1>{{ section.settings.unique1 | escape }}</h1>
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'text1' %}
               <h2>{{block.settings.unique | escape}}</h2>
        {% endcase %}
    {% endfor %}
</div>

{% schema %}
{
    "name": "t:sections.text.name",
    "tag": "section",
    "class": "spaced-section",
    "settings": [
      {
        "type":"text",
        "id":"unique1",
        "label":"Heading",
        "default":"This is a heading"
      }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "t:sections.text.blocks.text.name",
            "settings":[
                {
                  "type": "text",
                  "id": "unique",
                  "default": "Say something about the author",
                  "label":"Description about author"
                },
                {
                  "type": "text",
                  "id": "unique2",
                  "label": "Image",
                  "default":"Hello world"
                }   
            ]
        },
        {
          "type":"text1",
          "name":"t:sections.text.blocks.text1.name",
          "settings":[
            {
              "type":"text",
              "id":"unique",
              "default":"some text",
              "label":"t:sections.text.blocks.text1.settings.unique3.label"
            }
          ]
        }
    ],
    "presets": [
    {
      "name": "t:sections.text.presets.name",
       "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema  %}