<div>
    <h1>{{ section.settings.unique1 | escape }}</h1>
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'text' %}
                <!--<img 
                 src="{{block.settings.unique2 | img_url: '3000x'}}"
                 width="{{block.settings.unique2.width}}" 
                 height="{{block.settings.unique2.height}}" 
                 loading="lazy"> -->
                <h2>{{block.settings.unique2 | escape}}</h2>
                <h2>{{ block.settings.unique | escape}}</h2>
        {%endcase%}
    {%endfor%}
</div>

{% schema %}
{
    "name": "t:sections.text.name",
    "tag": "section",
    "class": "spaced-section",
    "settings": [
      {
        "type":"text",
        "id":"unique1",
        "label":"t:sections.text.settings.label",
        "default":"This is a heading"
      }
    ],
    "blocks": [
        {
            "name": "t:sections.text.blocks.text.name",
            "type": "text",
            "settings":[
                {
                  "type": "text",
                  "id": "unique",
                  "default": "Say something about the author",
                  "label":"t:sections.text.blocks.text.settings.text.label"
                },
                {
                  "type": "text",
                  "id": "unique2",
				  "default":"Hello world",
                  "label": "t:sections.text.blocks.text.settings.unique2.label"
                }   
            ]
        }
    ],
    "presets": [
    {
      "name": "about author",
	  "blocks": [
       {
          "type": "text"
       }

      ]
    }
  ]
}
{% endschema  %}